@model Smart_Invoice.Models.Customer
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>


<hr />
<div class="row card" style="display:flex">
    <div class="card-header"><h4>Customer</h4></div>
     <form asp-action="Edit" class="row">
