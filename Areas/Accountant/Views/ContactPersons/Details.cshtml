@model Smart_Invoice.Models.ContactPerson
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
	<h4>ContactPerson</h4>
	<hr />

	<div class="container">
		<div class="row">
			<div class="col-md-6 ">
				<div class="card mb-4 w-100">
					<div class="card-header">
					  Contact Person Information
					</div>
					<div class="card-body">
					  <dl class="row">
						<dt class="col-sm-4">Full Name</dt>
						<dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
						<dt class="col-sm-4">Email</dt>
						<dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
						<dt class="col-sm-4">Phone Number</dt>
						<dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
						<dt class="col-sm-4">Position</dt>
						<dd class="col-sm-8">@Html.DisplayFor(model => model.Position)</dd>
						
					  </dl>
					</div>
				</div>
			</div>
		</div>
	</div>

	
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.ContactPersonId">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
